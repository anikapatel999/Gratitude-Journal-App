<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/avCompose"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_weight="1"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_url="https://assets1.lottiefiles.com/packages/lf20_nritr446.json" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/avCalendar"
            android:layout_marginTop="-80dp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avCompose"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_url="https://assets9.lottiefiles.com/packages/lf20_cmsczshd.json" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/avPlaceholder1"
            android:layout_marginTop="-50dp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avCalendar"
            android:layout_weight="1"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_url="https://assets2.lottiefiles.com/packages/lf20_lxgjrju4.json" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/avPlaceholder2"
            android:layout_marginTop="-50dp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avPlaceholder1"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_url="https://assets2.lottiefiles.com/packages/lf20_lphquaqr.json" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>